<option value="">--Maak hier uw keuze--</option>
 <option value="/tenzinger/public/index.php/weergave/groupbyvervoer">Vervoersmiddel</option>
 <option value="/tenzinger/public/index.php/weergave/groupbydatum">Datum</option>
</select>

 {% endif %}
{% endblock %}
